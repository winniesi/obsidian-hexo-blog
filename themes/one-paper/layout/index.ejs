<div class="post-list">
    <% page.posts.each(function (post) { %>
        <div class="post">
            <a class="post-title" href="<%- url_for(post.path) %>">
                <%= post.title %>
            </a>
            <div class="post-except">
                <% if (post.description) { %>
                    <%- post.description %>
                        <% } else { %>
                            <%- strip_html(post.content).substr(0, 120) %>
                                <% } %>
                                    <a class="read-more" href="<%- url_for(post.path) %>"> ... </a>
            </div>
            <div class="post-date"><%- date(post.date, "YYYY.MM.DD" ) %></div>
        </div>
        <% }) %>
</div>
<%- partial('_partial/paginator') %>